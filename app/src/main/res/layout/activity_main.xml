<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btSimpleTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/simple_tabs"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btScrollableTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btSimpleTabs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/scrollable_tabs"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btIconAndTextTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btScrollableTabs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/icon_and_text_tabs"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btCustomTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btIconAndTextTabs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/custom_tabs"
        android:textSize="16sp" />

</RelativeLayout>
